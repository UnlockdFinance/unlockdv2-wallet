{
  "name": "gs-bnpl-sc",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "forge": "forge",
    "build": "forge build",
    "hh:build": "hardhat compile",
    "clean": "forge clean",
    "hh:clean": "hardhat clean",
    "test:forge": "yarn forge test -vv --fork-url $ALCHEMY_RPC --fork-block-number $FORK_BLOCK --match-contract DelegationOwnerTest",
    "test:forge:all": "yarn forge test -vv --fork-url $ALCHEMY_RPC --fork-block-number $FORK_BLOCK --gas-report",
    "snapshot": "yarn forge snapshot --fork-url $ALCHEMY_RPC --fork-block-number $FORK_BLOCK",
    "coverage": "yarn forge coverage --fork-url $ALCHEMY_RPC --fork-block-number $FORK_BLOCK --report lcov",
    "test": "dotenv-run-script test:forge",
    "test:all": "dotenv-run-script test:forge:all",
    "test:snapshot": "dotenv-run-script snapshot",
    "test:coverage": "dotenv-run-script coverage",
    "lint": "yarn lint:sol && yarn lint:ts && yarn prettier:check",
    "lint:sol": "solhint --config ./.solhint.json \"src/**/*.sol\"",
    "lint:ts": "eslint --config ./.eslintrc.js --ignore-path ./.eslintignore --ext .js,.ts .",
    "prettier": "prettier --config ./.prettierrc.yaml --write \"**/*.{js,json,md,sol,ts,yaml,yml}\"",
    "prettier:check": "prettier --check --config ./.prettierrc.yaml \"**/*.{js,json,md,sol,ts,yaml,yml}\"",
    "deploy:goerli": "hardhat compile && hardhat --network goerli deploy"
  },
  "devDependencies": {
    "@ethersproject/abi": "^5.7.0",
    "@ethersproject/providers": "^5.7.2",
    "@nomicfoundation/hardhat-chai-matchers": "^1.0.4",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.6",
    "@nomicfoundation/hardhat-toolbox": "^2.0.0",
    "@nomiclabs/hardhat-ethers": "npm:hardhat-deploy-ethers",
    "@nomiclabs/hardhat-etherscan": "^3.1.2",
    "@openzeppelin/contracts": "4.8.0",
    "@typechain/ethers-v5": "^10.1.0",
    "@typechain/hardhat": "^6.1.3",
    "@types/node": "^18.11.7",
    "@typescript-eslint/eslint-plugin": "^5.41.0",
    "@typescript-eslint/parser": "^5.41.0",
    "chai": "^4.3.6",
    "dotenv": "^16.0.3",
    "dotenv-run-script": "^0.2.0",
    "eslint": "^8.26.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.1.1",
    "ethers": "^5.7.2",
    "hardhat": "^2.12.1",
    "hardhat-deploy": "^0.11.18",
    "hardhat-gas-reporter": "^1.0.9",
    "prettier": "^2.7.1",
    "prettier-plugin-solidity": "^1.0.0-beta.24",
    "solhint": "^3.3.7",
    "solhint-plugin-prettier": "^0.0.5",
    "solidity-coverage": "^0.8.2",
    "ts-node": "^10.9.1",
    "typechain": "^8.1.0",
    "typescript": "^4.8.4"
  }
}
